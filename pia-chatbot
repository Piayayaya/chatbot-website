<body>

<div class="chat-container">
  <h2>ðŸ’¬ Chat with Me!</h2>
  <div id="chatbox"></div>

  <div id="userInput">
    <input type="text" id="userText" placeholder="Type your message..." />
    <button onclick="sendMessage()">Send</button>
  </div>
</div>

<script>
  const chatbox = document.getElementById('chatbox');

  function sendMessage() {
    const userText = document.getElementById('userText').value.trim();
    if (!userText) return;

    appendMessage("You: " + userText, "user");

    let botReply = "I'm just a simple bot.";
    const text = userText.toLowerCase();
    if (text.includes("hello")) botReply = "Hi there!";
    else if (text.includes("how are you")) botReply = "I'm doing great, thanks!";
    else if (text.includes("bye")) botReply = "Goodbye!";

    setTimeout(() => appendMessage("Bot: " + botReply, "bot"), 500);
    document.getElementById('userText').value = "";
  }

  function appendMessage(message, sender) {
    const msg = document.createElement('div');
    msg.className = 'message ' + sender;
    msg.textContent = message;
    chatbox.appendChild(msg);
    chatbox.scrollTop = chatbox.scrollHeight;
  }
</script>

</body>
